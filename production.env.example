# プルデンシャル生命変額保険最適化システム - 本番環境変数
# このファイルをコピーして本番用の値を設定してください

# Supabase設定（必須）
REACT_APP_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
REACT_APP_SUPABASE_ANON_KEY=YOUR_ANON_KEY
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY

# 外部API（必須）
ALPHA_VANTAGE_API_KEY=YOUR_ALPHA_VANTAGE_KEY
NOTEBOOK_LM_API_KEY=YOUR_NOTEBOOKLM_API_KEY

# 管理者設定（必須）
ADMIN_USER_IDS=admin-uuid-from-database

# アプリケーション設定
NODE_ENV=production
REACT_APP_ENV=production
REACT_APP_API_URL=https://your-backend-domain.vercel.app/api

# セキュリティ設定（必須）
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long
BCRYPT_ROUNDS=12

# CORS設定
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app,https://insurance-optimizer.com,https://www.insurance-optimizer.com

# レート制限
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# セッション設定
SESSION_SECRET=your_session_secret_at_least_32_characters
SESSION_MAX_AGE=86400000

# メール送信設定（オプション）
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@insurance-optimizer.com

# エラー監視（オプション）
SENTRY_DSN=your_sentry_dsn

# バックアップ設定（オプション）
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# 機能フラグ
ENABLE_EXPORT_PDF=true
ENABLE_EXPORT_EXCEL=true
ENABLE_AI_ANALYSIS=true
ENABLE_MARKET_DATA=true