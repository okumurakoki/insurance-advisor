{
  "version": 2,
  "buildCommand": "echo 'Building backend...'",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/update-market-data",
      "schedule": "0 2 10 * *"
    },
    {
      "path": "/api/cron/update-market-data",
      "schedule": "0 2 20 * *"
    },
    {
      "path": "/api/cron/update-market-data",
      "schedule": "0 2 30 * *"
    }
  ],
  "headers": [
    {
      "source": "/api/cron/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}